<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{ section.settings.card_image | image_url: width: 500 }}" alt="{{section.settings.card_image.alt}}">
  <div class="card-body">
    <h5 class="card-title">{{ section.settings.my_id }}</h5>
    <p class="card-text">{{ section.settings.card_text }}</p>
    <a href="{{ section.settings.button_link }}" class="btn btn-primary">{{ section.settings.btn_text }}</a>
  </div>
</div>
<style>
  .card .btn {
    background-color : {{ section.settings.btn-color}}
  }
</style>  
{% schema %}
{
    "name": "Bootstrap Card",
    "tag": "section",
    "settings": [
        {
          "type": "image_picker",
          "id": "card_image",
          "label": "Card Image"
        },
        {
            "type": "color",
            "id": "btn-color",
            "label": "Button Color",
            "default": "#3b4d28"
        },
        
		{
	"type": "text",
      "id": "my_id",
      "label": "Card Title",
      "default": "Enter text here"
        },


		{
	"type": "text",
      "id": "card_text",
      "label": "Card Text",
      "default": "Enter text here"
        },

		{
	"type": "text",
      "id": "btn_text",
      "label": "Button Title",
      "default": "Enter text here"
        },

{
  "type": "url",
  "id": "button_link",
  "label": "Button link"
}

    ],
    "presets": [{
        "name": "Bootstrap Card",
        "category": "Custom"
    }]
}
{% endschema %}

